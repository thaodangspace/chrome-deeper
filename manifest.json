{
  "manifest_version": 3,
  "name": "AI Tab Assistant",
  "version": "1.0.0",
  "description": "Chat with AI about the current tab content using OpenAI or OpenRouter APIs",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://api.openai.com/*",
    "https://openrouter.ai/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["sidebar.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Tab Assistant Settings"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar.html", "sidebar.css"],
      "matches": ["<all_urls>"]
    }
  ]
}